{
    // ===================================
    // Editor Configuration
    // ===================================
    "editor.fontFamily": "Operator Mono Lig Book, Times new roman",
    "editor.fontLigatures": true,
    "editor.fontSize": 16,
    "editor.lineHeight": 1.6,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.renderWhitespace": "all",
    "editor.suggestSelection": "first",
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    },
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.inlineSuggest.enabled": true,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "meta.embedded.block.frontmatter",
                "settings": {
                    "fontStyle": "italic"
                }
            }
        ]
    },
    // ===================================
    // Minimap Settings
    // ===================================
    "editor.minimap.enabled": false,
    "editor.minimap.showSlider": "mouseover",
    "editor.minimap.scale": 1,
    "editor.minimap.size": "proportional",
    "editor.minimap.side": "right",
    "editor.minimap.renderCharacters": false,
    // ===================================
    // Language Specific Settings
    // ===================================
    "[java]": {
        "editor.tabSize": 2
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 2
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[scss]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 2
    },
    // ===================================
    // JavaScript/TypeScript
    // ===================================
    "javascript.preferences.importModuleSpecifier": "relative",
    "typescript.preferences.importModuleSpecifier": "relative",
    "javascript.format.semicolons": "insert",
    "typescript.format.semicolons": "insert",
    "typescript.preferences.includePackageJsonAutoImports": "on",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "typescript.updateImportsOnFileMove.enabled": "always",
    // ===================================
    // Java Configuration
    // ===================================
    "java.import.gradle.java.home": "/opt/homebrew/Cellar/openjdk/22.0.1/libexec/openjdk.jdk/Contents/Home",
    "java.jdt.ls.java.home": "/opt/homebrew/Cellar/openjdk/22.0.1/libexec/openjdk.jdk/Contents/Home",
    "java.jdt.ls.vmargs": "-XX:+UseParallelGC -XX:GCTimeRatio=4 -XX:AdaptiveSizePolicyWeight=90 -Dsun.zip.disableMemoryMapping=true -Xmx2G -Xms200m",
    // ===================================
    // Prettier Configuration
    // ===================================
    "prettier.tabWidth": 2,
    // ===================================
    // Workbench & UI
    // ===================================
    "workbench.editor.showTabs": "single",
    "workbench.sideBar.location": "right",
    "workbench.startupEditor": "none",
    "workbench.colorTheme": "Catppuccin Mocha",
    "workbench.iconTheme": "catppuccin-latte",
    "workbench.editorAssociations": {
        "*.class": "default"
    },
    // ===================================
    // Terminal Configuration
    // ===================================
    "terminal.external.osxExec": "Warp.app",
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.integrated.fontFamily": "Operator Mono Lig Book",
    // ===================================
    // File Management
    // ===================================
    "files.exclude": {
        "**/.classpath": true,
        "**/.factorypath": true,
        "**/.project": true,
        "**/.settings": true
    },
    // ===================================
    // Version Control
    // ===================================
    "git.openRepositoryInParentFolders": "always",
    "diffEditor.ignoreTrimWhitespace": false,
    // ===================================
    // Extensions
    // ===================================
    "github.copilot.editor.enableAutoCompletions": true,
    "redhat.telemetry.enabled": true,
    "vsicons.dontShowNewVersionMessage": true,
    "extensions.ignoreRecommendations": true,
    "vscode_custom_css.imports": [
        "file:///Users/saiguy/.vscode/style.css"
    ],
    // ===================================
    // Security
    // ===================================
    "security.promptForLocalFileProtocolHandling": false,
    "security.workspace.trust.untrustedFiles": "open",
    // ===================================
    // Windsurf
    // ===================================
    "windsurf.enableTabToJump": false,
    "windsurf.enableConfig": {
        "*": true
    },
    // ===================================
    // Other
    // ===================================
    "azureResourceGroups.selectedSubscriptions": [],
    "liveServer.settings.donotShowInfoMsg": true,
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "cursor.cpp.enablePartialAccepts": true
}