// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "features": {
    "edit_prediction_provider": "zed"
  },
  "icon_theme": "Catppuccin Latte",
  "agent": {
    "always_allow_tool_actions": true,
    "default_profile": "ask",
    "default_model": {
      "provider": "copilot_chat",
      "model": "gemini-2.5-pro"
    },
    "play_sound_when_agent_done": true
  },
  "base_keymap": "Cursor",
  "ui_font_size": 16,
  "ui_font_family": "Operator Mono",
  "ui_font_weight": 300,
  "buffer_font_size": 16,
  "buffer_font_family": "Operator Mono Lig",
  "buffer_line_height": {
    "custom": 1.6
  },
  "theme": {
    "mode": "system",
    "light": "Catppuccin Mocha",
    "dark": "Catppuccin Mocha"
  },
  "terminal": {
    "font_family": "Operator Mono Lig",
    "font_size": 16,
    "shell": {
      "program": "zsh"
    },
    "working_directory": "current_project_directory",
    "env": {
      "TERM": "xterm-256color"
    }
  },
  "project_panel": {
    "dock": "right"
  },
  // Hide tab bar completely for a single-tab experience
  "tab_bar": {
    "show": false
  },
  "file_scan_exclusions": [
    // Dependencies
    "**/node_modules",
    "**/bower_components",
    "**/vendor",
    "**/.pnp",
    "**/.pnp.js",

    // Build outputs
    "**/dist",
    "**/build",
    "**/out",
    "**/.next",
    "**/.nuxt",
    "**/.output",
    "**/target",

    // Cache directories
    "**/.cache",
    "**/.turbo",
    "**/.parcel-cache",
    "**/.webpack-cache",
    "**/eslintcache",

    // Test artifacts
    "**/coverage",
    "**/.nyc_output",
    "**/test-results",

    // Large generated files
    "**/*.min.js",
    "**/*.min.css",
    "**/bundle.js",
    "**/*-lock.json",
    "**/*.map",
    "**/package-lock.json",

    // Environment and logs
    "**/.env.local",
    "**/.env.*.local",
    "**/logs",
    "**/*.log",

    // IDE/Editor
    "**/.idea",
    "**/.vscode",
    "**/*.swp",
    "**/*.swo"
  ],

  "lsp": {
    "typescript-language-server": {
      "settings": {
        "typescript": {
          "suggest": {
            "autoImports": true
          },
          "preferences": {
            "importModuleSpecifier": "relative"
          }
        }
      }
    },
    "eslint": {
      "settings": {
        "codeActionOnSave": {
          "rules": ["import/order"]
        },
        "rulesCustomizations": [
          {
            "rule": "*",
            "severity": "warn"
          }
        ],
        "workingDirectory": {
          "mode": "auto"
        }
      }
    }
  },

  // Prettier formatting configuration
  "format_on_save": "on",
  "formatter": "prettier",
  "prettier": {
    "allowed": true,
    "package_manager": "yarn"
  },
  "languages": {
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "TSX": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "JSON": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--write", "--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "CSS": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--write", "--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "SCSS": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--write", "--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "HTML": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--write", "--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "Markdown": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--write", "--stdin-filepath", "{buffer_path}"]
        }
      }
    }
  }
}
